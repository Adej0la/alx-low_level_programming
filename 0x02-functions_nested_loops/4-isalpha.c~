#include <stdio.h>
#include "main.h"

/**
 * _isalpha - Checks for character in the alphabet
 * @c: an integer
 * Return: 1 if c is an integer, 0 if c is not an integer
 */
int _isalpha(int c)
{
	int lwcase_init = 97;
	int lwcase_end = 123;
	int upcase_init = 65;
	int upcase_end = 90;

	if ((int)c <= lwcase_init && (int)c < lwcase_end)
	{
		while (lwcase_init < lwcase_end)
		{
			if ((int)c == lwcase_init)
				return (1);

			lwcase_init++;
		}
	}
	else if ((int)c <= upcase_init && (int)c < upcase_end)
	{
		while (upcase_init < upcase_end)
		{
			if ((int)c == upcase_init)
				return (1);

			upcase_init++;
		}
	}
	return (0);
}
